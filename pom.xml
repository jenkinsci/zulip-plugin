  <artifactId>humbug</artifactId>
  <packaging>hpi</packaging>
  <version>0.1.1-SNAPSHOT</version>
  <name>Jenkins Humbug Plugin</name>
  <description>A build status notifier that sends notifications to Humbug</description>
  <url>https://wiki.jenkins-ci.org/display/JENKINS/Humbug+Plugin</url>
  <licenses>
    <license><name>MIT license</name><comments>All source code is under the MIT license.</comments></license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/jenkinsci/humbug-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:jenkinsci/humbug-plugin.git</developerConnection>
    <url>http://github.com/jenkinsci/humbug-plugin</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>org.jenkins-ci.main</groupId>
      <artifactId>maven-plugin</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
      <version>3.1-rc1</version>
    </dependency>
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.6</version>
    </dependency>
  </dependencies>
  <developers>
    <developer>
      <id>wdaher</id>
      <name>Waseem Daher</name>
      <email>wdaher@humbughq.com</email>
      <organization>Humbug</organization>
      <organizationUrl>https://humbughq.com/</organizationUrl>
    </developer>
  </developers>

  <repositories>
    <repository>
      <id>repo.jenkins-ci.org</id>
      <url>http://repo.jenkins-ci.org/public/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>repo.jenkins-ci.org</id>
      <url>http://repo.jenkins-ci.org/public/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
